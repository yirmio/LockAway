<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor">

    <com.parse.ParseImageView
        android:id="@+id/user_order_imageView_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/afeyalogo"></com.parse.ParseImageView>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/user_order_imageView_photo"
        android:layout_toRightOf="@+id/user_order_imageView_photo">

        <TextView
            android:id="@+id/user_order_textView_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/user_order_textView_time_toMake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_order_textView_name"
            android:drawableLeft="@drawable/ic_hourglass_empty_black_24dp"
            android:text="TimeToMake"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/user_order_textViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_order_textView_time_toMake"
            android:drawableLeft="@drawable/ic_action_money"
            android:text="Price"


            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/user_order_btn_X"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="#00ffffff"
        android:src="@drawable/ic_delete_black_24dp"
        android:text="X" />

</RelativeLayout>